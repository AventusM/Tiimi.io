CREATE TABLE BookPrequisiteCourses(
book_id integer,
course_id integer,

FOREIGN KEY (book_id) REFERENCES Book(id),
FOREIGN KEY (course_id) REFERENCES Course(id)
);

-- Liitostaulu

CREATE TABLE BookRelatedCourses(
book_id integer,

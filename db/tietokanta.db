CREATE TABLE Book(
id integer PRIMARY KEY NOT NULL,
title varchar(50) NOT NULL,
author varchar(50) NOT NULL,
ISBN varchar (50),
tags varchar(50),
dateAdded DATE NOT NULL
);

CREATE TABLE Course(
id integer PRIMARY KEY NOT NULL,
name varchar(50)
);

